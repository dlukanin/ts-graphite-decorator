{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "lib": ["es2017"],
      "sourceMap": true,
      "rootDir": "src/",
      "outDir": "dist/",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "declaration": true,
      "declarationDir": "./dist",
      "esModuleInterop": true
    },
    "exclude": [
      "node_modules/",
      "dist/",
      "__test__/",
      "examples/"
    ]
  }
  